page{
  height: 100%;
}
.box{
  overflow: scroll;
  background-color:#f1f2f3;
  min-height: 100%;
  border-top: 3rpx solid #09bb07;
}
.item{
  margin-top: 20rpx;
  border-top: 1rpx solid #e0e1e1;
  border-bottom: 3rpx solid #e0e1e1;
  background: #ffffff;

}
.item__head{
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 17rpx;
  padding-right: 30rpx;
  border-bottom: 2rpx solid #dde0e0;
  position: relative;
}

.head__text{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #5f5f5f;
}
.head__text--right{
  font-size: 26rpx;
  color: #444444;
}
.item__cell{
  height: 95rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  padding: 0 50rpx 0 30rpx;
  border-bottom:2rpx solid #dde0e0;
}
.item__cell input{
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  padding:0 25rpx;
  border:2rpx solid #dde0e0;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.item__cell:nth-child(even){
  background-color: #f9f9f9;
}
.item__cell--select{
  padding-right: 70rpx;
  position: relative;
}
.item__cell--select:after{
  content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border:5rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  top:35rpx;
  z-index: 1;
}
