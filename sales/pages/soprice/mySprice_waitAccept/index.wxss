page{
  height: 100%;
}
.box{
  background-color:#f1f2f3;
  min-height: 100%;
  border-top: 3rpx solid #008e40;
  box-sizing: border-box;
}
.box__search-box{
  padding:10rpx;
}
.scroll-box{
  border-top:1rpx solid  #dde0e0;
}
.list{
  width: 100%;
  padding:0 20rpx;
  background: #FFF;
  box-sizing: border-box;
  border-bottom:1rpx solid  #dde0e0;
}
.list:nth-child(even){
  background: #f1f2f3;
}
.list__icon{
  width: 30rpx;
  height: 22rpx;
  margin-right: 28rpx;
}
.list__title{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    height: 76rpx;
    font-size: 22rpx;
  position: relative;
  }
.list__title:after{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #a5a5a5;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 0;
  z-index: 1;
}
.list__icon--title{
  width: 30rpx;
  height: 22rpx;
  margin-right: 30rpx;
}
.list__title--code{
  font-size: 22rpx;
  margin-left: 15rpx;
  align-self: flex-end;
  margin-bottom: 20rpx;
}
.list__title--default{
  font-size: 22rpx;
  color: #ff5500;
  position: absolute;
  right: 0rpx;
}
.list__item{
  font-size: 22rpx;
  color: #a2a2a2;
}

.item__content{
  margin-left: 40rpx;
  border-top: 1rpx solid #a5a5a5;

}
.content__text{
  font-size: 22rpx;
  line-height: 40rpx;
  color: #898989;
  padding: 10rpx 5rpx;
  border-bottom: 1rpx solid #a5a5a5;
}
.content__prod{
  width: 100%;
  height: 230rpx;
  padding:20rpx 7rpx;
  box-sizing: border-box;
  white-space: nowrap;
  border-bottom: 1rpx solid #a5a5a5;
}
.product{
  display: inline-block;
  text-align: center;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.product__img{
  width: 105rpx;
  height: 105rpx;
  border: 1rpx solid #a5a5a5;
}
.product__name{
  margin: 5rpx 0;
}


.item__bottom{
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 20rpx;
}

.item__button{
  border: 0;
  opacity: 0.8;
  -webkit-tap-highlight-color:transparent;

}

.item__button-icon{
  width: 29rpx;
  height: 32rpx;
  position: relative;
  top: 5rpx;
}