page{
  height: 100%;
}
.box{
  overflow: scroll;
  min-height: 100%;
  border-top: 3rpx solid #008e40;
  box-sizing: border-box;
}
.info{
  font-size: 30rpx;
  color: #5f5f5f;
  border-bottom: 1rpx solid #e0e1e1;
  padding: 20rpx 20rpx;
}
.text--val{
    font-size: 22rpx;
    line-height: 40rpx;
    color: #686868;
}
.product{
    display: flex;
    flex-direction: row;
    font-size: 34rpx;
    padding-top: 20rpx;
    padding-bottom: 50rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #a5a5a5;
    color: #444444;
}
.product__info{
    flex: 1;
    display: flex;
    justify-content: center;
    flex-direction: column;
}
.product__content{
    padding-left: 20rpx;
    padding-top: 20rpx;
    font-size: 30rpx;
}

.product__img{
    float: left;
    width: 150rpx;
    height: 150rpx;
    border: 1rpx solid #a5a5a5;
    margin-right: 20rpx;
}
.price--old{
    color:#919191;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.product__num{
    width: 280rpx;
    display: inline-block;
    text-align: center;
}

.item--cell{
    display: flex;
    align-items: center;
    padding: 30rpx;
    font-size: 32rpx;
}
.cell__caption{
    width: 180rpx;
    display: inline-block;
    text-align: right;
    color: #333333;
    flex-shrink:0;
}
.cell__caption--start{
    align-self: flex-start;
}
.cell__input{
    width: 450rpx;
    min-height: 100rpx !important;
    border: 1rpx solid #a5a5a5;
    box-sizing: border-box;
    padding: 10rpx;
}
.button{
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding: 0 !important;
    margin-right: 20rpx;
}
.cell__image{
    display: inline-block;
    width: 64rpx;
    height: 61rpx;
    margin-right: 20rpx;
}
.cell__camera{
    width: 64rpx;
    height: 64rpx;
    display: inline-block;
    border: 1rpx solid #e4e4e4;
    font-size: 14rpx;
    text-align: center;
}

.cell__image--mini{
    margin: 3rpx auto;
    width: 45rpx;
    height: 38rpx;
}
.buttons{
    width: 480rpx;
    margin: 60rpx auto;
    display: flex;
}
.buttons button{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
}
