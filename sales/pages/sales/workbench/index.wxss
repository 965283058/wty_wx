.page {
  width: 100%;
  height: 100%;
  background: #f1f2f3;
}
.nav__bg{
  height: 150rpx;
  background: #fff;
  border-bottom: 1rpx solid #e3e3e3;
}
.nav{
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  font-size: 22rpx;
  color: #666;
}
.text{
  margin: 35rpx 0 25rpx 0;
}
.big__text{
  font-size: 26rpx;
  margin-right: 24rpx;
}
.logo{
  display: flex;
  justify-content: flex-start;
  margin-top: 25rpx;
  width:109rpx;
  height: 105rpx;
}
.nav__box{
  position: relative;
  width: 43%;
}
.nav__box:nth-child(2) {
  width: 52%;
}
.text__box{
  position: absolute;
  left: 128rpx;
  top: 33rpx;
}
.img{
  display: flex;
  justify-content: flex-end;
  right: 20rpx;
  top:44rpx;
  position: relative;
}
.title:after {
  content: "";
  display: block;
  width: 23rpx;
  height: 23rpx;
  border: 3rpx solid #b0afaf;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  z-index: 1;
}
.ewm{
  width:74rpx;
  height: 68rpx;
}
.box{
  margin-bottom: 20rpx;
}

.box__top{
  display: flex;
  width: 100%;
  background:#fff;
  height: 70rpx;
  padding: 6rpx 0;
  justify-content: space-between;
  border-bottom:1rpx solid #008E40;
  position: relative;
}
.box .title {
  border-left: 3rpx solid #008E40;
  color: #008E40;
  font-size: 30rpx;
  height: 36rpx;
  margin: 20rpx 0 0 0;
  padding-left: 30rpx;
}

.list {
  border-bottom: 1rpx solid #dde0e0;
  display: flex;
  flex-wrap:wrap;
  background: #fafafa;
}
.list__box{
  display: flex;
  width: 186rpx;
  border-right: 1rpx solid #dde0e0;
  color: #49b6e1;
  font-size: 26rpx;
  justify-content: center;
  margin: 20rpx 0;
  flex-wrap:wrap;
}
.common .list__box{
  margin:0;
  padding: 20rpx 0;
}

.list__img{
  width: 66rpx;
  height: 64rpx;
  margin: 6rpx 30rpx 20rpx;
}
.list__title-text{
  display: flex;
  color: #606060;
}
.list .list__box:last-child{
  border-right: none;
}

