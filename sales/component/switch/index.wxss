.switch{
    width: 45rpx;
    height: 45rpx;
    border: 1rpx solid #cccccc;
    border-radius: 50%;
    background: #ffffff;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}
.switch--active{
    border-color: #008E40;
    background: #008E40;
}
.switch--disabled{
    border-color: #c1c2c3;
    background: #f0f0f0;
}