.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
page{
  width:100%;
  height:100%;
  background: #f1f2f3;
}
text.cell-caption{
  color: #322e47;
  font-size: 26rpx;
  min-width: 150rpx;
  text-align: left;
}
input.cell-input{
  width: 100%;
  font-size: 26rpx;
  text-align: left;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  flex-grow: 1;
  padding: 0 5rpx;
}
input.cell-input::placeholder{
  color: #aaaaaa;
}
.cell-select{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-grow: 1;
  padding: 0 5rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #a5a5a5;
  position: relative;
  padding-right: 40rpx;
}
.cell-select:after{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #a5a5a5;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 20rpx;
  z-index: 1;
}
.cell-select text{
  width: 100%;
}
.cell-btn{
  width: 675rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 40rpx auto;
  font-size: 34rpx;
  box-shadow: 0 7rpx 7rpx 0 #94ef93;
  color: #ffffff;
}
