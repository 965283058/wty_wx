.multiPicker{
    width: 750rpx;
    display: block;
    position: fixed;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: rgba(0,0,0,0.4);
}

.multiPicker-box{
    width: 100%;
    position: absolute;
    bottom: 0;
    background: #ffffff;
}

.box__header{
    display: flex;
    justify-content: space-between;
    padding: 0 50rpx;
    border-bottom: 1rpx solid #cccccc;
}

.box__header-text{
    font-size: 34rpx;
    line-height: 80rpx;
}
.box__header-text--grey{
    color: grey;
}
.box__header-text--green{
    color: green;
}

.box__list{
    max-height: 480rpx;
    display: flex;
    flex-direction: column;
    -webkit-overflow-scrolling: touch;
}
.list__item{
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 1rpx solid #cccccc;
    box-sizing: border-box;
}


.item__switch{
    width: 45rpx;
    height: 45rpx;
    border: 1rpx solid #cccccc;
    border-radius: 50%;
    background: #ffffff;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
}
.item__switch--active{
    border-color: #008E40;
    background: #008E40;
}