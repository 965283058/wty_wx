<view class="box">
  <form bindsubmit="formSubmit" style="width: 100%">
      <view class='list_box'>
          <text>姓名</text>
          <input class='list_bd__input' placeholder="请输入姓名" />
      </view>
      <view class='list_box'>
          <text>手机号</text>
          <input class='list_bd__input item' placeholder="请输入手机号" />
      </view>
      <view class='list_box'>
          <text>邮箱</text>
          <input class='list_bd__input' placeholder="xxx@sina.com" />
      </view>
      <view class='list_bd'>
          <text class='list_title'>登录账号</text>
          <text class='logo'>已激活</text>
      </view>
    <view class='list_bd'>
        <text class='list_title'>组织机构</text>
        <text class='logo'>北京XX公司</text>        
    </view>
    <view class='list_bd'>
        <text class='list_title'>部门</text>
        <navigator url="/pages/bmem/department/list/index">
          <text class='logo'>采购部</text>    
        </navigator>    
    </view>
    <view class='list_bd'>
        <text class='list_title'>岗位</text>
        <text class='logo'>采购经理|财务经理</text>        
    </view>

    <view class='btn'>
      <button class="next__btn" formType="submit" size="default" bindtap='toSave'>提交</button>
    </view>
  </form>
</view>