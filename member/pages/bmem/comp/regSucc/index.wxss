.page {
  width: 100%;
  margin-top: 20rpx;
}

.welcome_hd {
  width: 100%;
  height: 135px;
  border-bottom: 1px solid #dfe0e1;
  background: #fff;
}

.welcome_icon {
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
}

.welcome_icon-text {
  margin-top: 20px;
  display: block;
  text-align: center;
  font-size: 26rpx;
  color:#008E40;
}
.text__box{
  display: flex;
  justify-content: center;
}

.welcome_text,.welcome_text1 {
  font-size: 26rpx;
  color: #008E40;
  text-decoration: underline;
}
.welcome_text1{
  margin-left: 22rpx;
}
.welcome_text:first-child{
  margin-right: 22rpx;
}
.welcome__status{
  background: #f1f2f3;
  padding-top: 20rpx;
}
.welcome__status-text{
  background: #fb972c;
  color: #fff;
  line-height: 40rpx;
  padding: 18rpx 0;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
}

.publicity__info{
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.publicity__title{
  color: #A9A9A9;
  font-size: 26rpx;
  background:#f3f5f7;
  height:85rpx;
  line-height:85rpx;
  padding-left: 30rpx;
  position: relative;
  width: 94%;
}

.welcome_list_title {
  position: relative;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding-left: 17rpx;
  padding-right: 60rpx;
  border-bottom: 2rpx solid #008e40;
  color: #008E40;
  font-size: 26rpx;
}

.details__info{
  display: flex;
  position: relative;
  margin-right: 10rpx;
  width: 100%;
  border-bottom: 1rpx solid #d8dddc;
  color: #666;
  padding: 0 0 10rpx 28rpx;
  background: #fff;
  justify-content: space-between;
}
.details__info:hover{
  background: #f9f9f9;
}
.company__name{
  position: relative;
  width: 65%;
  padding-top: 15rpx;
  line-height: 39rpx;
  font-size: 26rpx;
  color: #9d9d9d;
  justify-content: flex-start;
}

.accept{
  display: flex;
  justify-content: flex-end;
  position: relative;
  font-size: 26rpx;
  margin: 7rpx 50rpx 0 0;
}

.text{
  font-size: 26rpx;
  color: #008E40;
  width: 100rpx;
  height: 52rpx;
  line-height: 52rpx;
  border: 1rpx solid #008E40;
  text-align: center;
  border-radius: 10rpx;
  margin: 27rpx 120rpx 0 0;
}
.text:hover{
  color: #fff;
  background: #008E40;
}
.visited{
  color: #929292;
  background: none;
  border: none;
}
.company__name text.title{
  font-size: 26rpx;
  color: #666;
}
.accept__text:after {
  content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 0;
  top: 34rpx;
  z-index: 1;
}
.accept__text{
  color:#9d9d9d;
  margin: 26rpx 40rpx 0 0;
}
.invite,.invited{
  padding: 2rpx 16rpx;
  background: #008E40;
  color: #fff;
  border-radius: 10rpx;
  margin-right: 7rpx;
}
.invited{
  border: 1rpx solid #9d9d9d;
  background: #e4e0e0;
  color: #8c8e91;
}