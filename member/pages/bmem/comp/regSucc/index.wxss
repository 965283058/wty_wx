.page {
  width: 100%;
  height: 100%;
}

.welcome_hd {
  width: 100%;
  height: 135px;
  border-bottom: 1px solid #dfe0e1;
}

.welcome_icon {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.welcome_icon-text {
  margin-top: 20px;
  display: block;
  text-align: center;
  font-size: 26rpx;
  color:#008E40;
}
.text__box{
  display: flex;
  justify-content: center;
}

.welcome_text,.welcome_text1 {
  font-size: 26rpx;
  color: #008E40;
  text-decoration: underline;
}
.welcome_text1{
  margin-left: 22rpx;
}
.welcome_text:first-child{
  margin-right: 22rpx;
}
.welcome__status{
  background: #f1f2f3;
  padding-top: 20rpx;
}
.welcome__status-text{
  background: #fb972c;
  color: #fff;
  line-height: 40rpx;
  padding: 18rpx 0;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
}

.publicity__info{
  display: flex;
  width: 100%;
  background:#fff;
  height: 70rpx;
  padding: 6rpx 0;
  justify-content: space-between;
  border-bottom:1rpx solid #008E40;
}
.publicity__title{
  border-left: 3rpx solid #008E40;
  color: #008E40;
  font-size: 26rpx;
  height: 36rpx;
  margin: 20rpx 0 0 0;
  padding-left: 30rpx;
  position: relative;
  width: 94%;
}

.welcome_list_title {
  position: relative;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding-left: 17rpx;
  padding-right: 60rpx;
  border-bottom: 2rpx solid #008e40;
  color: #008E40;
  font-size: 26rpx;
}

.details__info{
  display: flex;
  position: relative;
  margin-right: 10rpx;
  width: 100%;
  height: 103rpx;
  border-bottom: 1rpx solid #d8dddc;
  color: #666;
  padding-left: 28rpx;
  background: #fff;
}
.details__info:hover{
  background: #f9f9f9;
}
.company__name{
  position: relative;
  width: 88%;
  padding-top: 15rpx;
  line-height: 39rpx;
  font-size: 26rpx;
  color: #9d9d9d;
}
.text{
  font-size: 26rpx;
  color: #008E40;
  width: 100rpx;
  height: 52rpx;
  line-height: 52rpx;
  border: 1rpx solid #008E40;
  text-align: center;
  border-radius: 10rpx;
  margin: 27rpx 120rpx 0 0;
}
.text:hover{
  color: #fff;
  background: #008E40;
}
.visited{
  color: #929292;
  background: none;
  border: none;
}
.company__name text.title{
  font-size: 26rpx;
  color: #666;
}
