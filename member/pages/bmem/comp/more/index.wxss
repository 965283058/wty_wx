.box {
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  background: #f3f5f7;
}
.list{
  height: 85rpx;
  line-height: 85rpx;
  background-color: #fff;
}
.text{
  padding-right: 50rpx;
  color: #333;
}
.list,.details {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding-left: 22rpx;
  color:#666;
  font-size: 26rpx;
  border-bottom: 2rpx solid #dde0e0;
  position: relative;
}
.details{
  height: 85rpx;
  line-height: 85rpx;
  background: #fff;
}

.list__title {
  display: flex;
  justify-content: flex-start;
}
.logo{
  width: 150rpx;
  height: 100rpx;
  margin: 23rpx 80rpx 0 0;
}

.list__name,.logo {
  display: flex;
  justify-content: flex-end;
}
.list__name{
  margin-right: 75rpx;
  line-height: 75rpx;
  color: #333;
}
.name{
  display: flex;
  padding-right: 75rpx;
  color: #333;
}
.list__name:after,.logo:after {
  content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 49rpx;
  top: 60rpx;
  z-index: 1;
}
.list__name:after{
  top: 30rpx;
  right: 52rpx;
}
.name:after{
    content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 49rpx;
  top: 30rpx;
  z-index: 1;
}