<view class="box">
    <view class="input__box">
        <text class="text">上级机构</text>
        <input class="input" type="text" disabled="true" value="{{vo.parentName}}"/>
    </view>
    <view class="input__box">
        <text class="text">机构编码</text>
        <input class="input" type="text" bindinput="syncCode" value="{{po.code}}" placeholder="请填写分支机构编码"></input>
    </view>
    <view class="input__box">
        <text class="text">机构名称</text>
        <input class="input" type="text" bindinput="syncName" value="{{po.name}}" placeholder="请填写分支机构名称"></input>
    </view>
    <view class="input__box">
        <text class="text">负责人</text>
        <input class="input" type="text" bindinput="syncLegal" value="{{po.legalName}}" placeholder=""></input>
    </view>
    <view class="input__box">
        <text class="text">联系电话</text>
        <input class="input" type="number" maxlength="11" bindinput="syncPhone" value="{{po.phoneNumber}}" placeholder=""></input>
    </view>
    <view class="input__box">
        <text class="text">地址</text>
        <input class="input" type="text" bindinput="syncAddress" value="{{po.registerAddress}}" placeholder=""></input>
    </view>
    <view class='btn'>
        <button class="next__btn" size="default" bindtap='toSave'>提交</button>
    </view>
</view>