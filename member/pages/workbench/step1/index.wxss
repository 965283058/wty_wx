
.box{
  height: 100%;
  background: #f3f5f7;
  padding-top: 20rpx;
}
.details__info{
  display: flex;
  position: relative;
  margin-right: 10rpx;
  width: 100%;
  height: 103rpx;
  border-bottom: 1rpx solid #d8dddc;
  color: #666;
  padding-left: 28rpx;
  background: #fff;
  justify-content: space-between;
}
.company__name{
  padding-top: 15rpx;
  line-height: 39rpx;
  font-size: 26rpx;
  color: #9d9d9d;
}

.company__name text.title{
  font-size: 26rpx;
  color: #666;
}
.text__box{
  display: flex;
  justify-content: flex-end;
  font-size: 26rpx;
  position: relative;
  margin: 35rpx 70rpx 0 0;
}
.text:after {
  content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: -20rpx;
  top: 10rpx;
  z-index: 1;
}
