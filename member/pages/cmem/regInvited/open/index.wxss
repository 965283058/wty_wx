/**index.wxss**/

.box {
  background: #f3f5f7;
}


.input__box {
  display: flex;
  height: 85rpx;
  width: 100%;
  border-bottom: 1rpx solid #a5a5a5;
  justify-content: space-between;
  align-items: center;
  position: relative;
  
 
}
.text__box{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  background-color: #f3f5f7;
}
.text {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  margin-left: 30rpx;
  /* padding-left: 160rpx; */
}

.text1 {
  display: flex;
  height: 85rpx;
  border-bottom: 1rpx solid #a5a5a5;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  width: 100%;
  background: #fff;
}

.text-title {
  display: flex;
  height: 85rpx;
  line-height: 85rpx;
  justify-content: flex-start;
  color: #666;
  margin-left: 30rpx;
  font-size: 24rpx;
}

.text-right {
  display: flex;
  height: 85rpx;
  line-height: 85rpx;
  justify-content: flex-end;
  text-align: center;
  padding-left: 40rpx;
  padding-right: 30rpx;
  color: #666;
  font-size: 24rpx;
}

.input {
  display: flex;
  justify-content: flex-start;
  width: 85%;
  height: 80rpx;
  border: 1rpx solid #dde0e0;
  border-radius: 10rpx;
  font-size: 26rpx;
  background: #fff;
  color: #a5a5a5;
  padding-left: 20rpx;
}




.checkbox {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 26rpx;
  padding-left: 30rpx;
}
