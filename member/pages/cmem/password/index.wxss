/**index.wxss**/
.box{
  background: #f3f5f7;
  padding-top: 40rpx;
}
.input__box{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 36rpx 30rpx;
  position: relative;
}
.input{
  display: block;
  width: 100%;
  height: 80rpx;
  border:1rpx solid  #dde0e0;
  border-radius: 10rpx;
  font-size: 26rpx;
  background: #fff;
  padding-left:24rpx;
  color: #a5a5a5;
}
.next__btn{
  background: #008E40;
  color: #fff;
  margin-top: 20rpx;
  width: 90%;
  font-size: 33rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.sms{
  position: absolute;
  top: 1rpx;
  right: 36rpx;
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  color: #fff;
  background: #008E40;
  text-align: center;
  z-index: 9;
  font-size: 24rpx;
  border-radius: 0 10rpx 10rpx 0;
}
