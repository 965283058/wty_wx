page{
  height: 100%;
}
.box{
  background-color:#f1f2f3;
  min-height: 100%;
}
.list{
  width: 100%;
  margin-bottom: 20rpx;
  padding:25rpx 0;
  background: #FFF;
  box-sizing: border-box;
  border-top:1rpx solid  #dde0e0;
  border-bottom:1rpx solid  #dde0e0;
  display: flex;
  flex-direction: row;
}
.list__title{
  width: 210rpx;
  display: inline-block;
  color: #49b6e1;
  font-size: 26rpx;
  text-align: center;
  border-right:1rpx solid  #dde0e0;
  box-sizing: border-box;
}
.list__title-text{
  display: block;
}
.list__icon--title{
  margin: 10rpx auto;
  display: block;
  width: 60rpx;
  height: 50rpx;
}
.list__content{
  flex: 1;
  width: 540rpx;
  font-size: 22rpx;
  color: #a2a2a2;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.list__content-item{
  width: 180rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
}
.list__content-item--active{
  background-color: #f5f7f7;
}

