page{
  height: 100%;
}
.box{
  background-color:#f1f2f3;
  min-height: 100%;
}
.head{
  height: 85rpx;
  display: flex;
  align-items: center;
  padding-left: 17rpx;
  border-top: 3rpx solid #008E40;
  border-bottom: 3rpx solid #008E40;
  background: #ffffff;
}
.head__icon{
  width: 30rpx;
  height: 20rpx;
}
.head__text{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #5f5f5f;
}
.list{
  width: 100%;
  padding: 0 20rpx;
  background: #FFF;
  box-sizing: border-box;
  border-bottom:1rpx solid  #dde0e0;
}
.list__title{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  height: 80rpx;
  font-size: 30rpx;
  color: #5f5f5f;
  border-bottom: 1rpx dashed #a5a5a5;
}
.list__title:before{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #a5a5a5;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 20rpx;
  top:32rpx;
  z-index: 1;
}
.list__title--default{
  font-size: 22rpx;
  color: #ff5500;
  position: absolute;
  right: 50rpx;
}
.list__content{
  height: 95rpx;
  font-size: 22rpx;
  color: #a2a2a2;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.list__button{
  display: inline-block;
  margin: 0 10rpx;
}
.list__icon--btn{
  width: 22rpx;
  height: 25rpx;
  margin-right: 3rpx;
  position: relative;
  top:3rpx;
}