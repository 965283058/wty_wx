page{
  height: 100%;
}
.box{
  background-color:#f1f2f3;
  min-height: 100%;
}
.list{
  width: 100%;
  margin-bottom: 24rpx;
  padding: 20rpx;
  padding-top: 0;
  background: #FFF;
  box-sizing: border-box;
  border-top:1rpx solid  #dde0e0;
  border-bottom:1rpx solid  #dde0e0;
}
.list__title{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  height: 76rpx;
  font-size: 30rpx;
}
.list__title::after{
  content: " ";
  display: block;
  border-bottom: 1rpx solid #a5a5a5;
  transform:scale(1,0.5);
  position: absolute;
  left: 40rpx;
  right: 0;
  bottom:0;
  z-index: 1;
  margin: 0;
  padding: 0;
}
.list__title:before{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #a5a5a5;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(45deg);
  position: absolute;
  right: 20rpx;
  top:32rpx;
  z-index: 1;
}
.list__icon--title{
  width: 30rpx;
  height: 22rpx;
  margin-right: 30rpx;
}
.list__title--code{
  font-size: 22rpx;
  margin-left: 15rpx;
  align-self: flex-end;
  margin-bottom: 20rpx;
}
.list__title--default{
  font-size: 26rpx;
  color: #ff5500;
  position: absolute;
  right: 40rpx;
}
.list__content{
  font-size: 22rpx;
  color: #a2a2a2;
  padding-left:60rpx;
}
.list__content--text{
  display: block;
  line-height: 46rpx;
}
.list__content--bold{
  font-weight: bold;
  color: #898989;
  line-height: 60rpx;
}
.list__content--right{
  text-align: right;
}
.list__button{
  display: inline-block;
  margin: 0 10rpx;
}
.list__icon--btn{
  width: 22rpx;
  height: 25rpx;
  margin-right: 3rpx;
  position: relative;
  top:3rpx;
}
.button--add{
  margin-bottom: 100rpx;
}