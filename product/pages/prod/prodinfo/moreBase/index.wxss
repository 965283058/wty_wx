page{
  height: 100%;
}
.box{
  overflow: scroll;
  background-color:#f1f2f3;
  min-height: 100%;
  border-top: 3rpx solid #008E40;
}
.cell{
  width: 100%;
  background: #ffffff;
}
.cell:nth-child(even){
    background-color: #f9f9f9;
}
.cell--select{
  height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  padding-left: 37rpx;
  padding-right: 60rpx;
  border-bottom: 2rpx solid #dde0e0;
  position: relative;
  font-size: 24rpx;
  color: #5f5f5f;
}
.cell--select:after{
   content: "";
   display: block;
   width: 20rpx;
   height: 20rpx;
   border:5rpx solid #8c8e91;
   border-left: 0;
   border-bottom: 0;
   transform: rotate(45deg);
   position: absolute;
   right: 30rpx;
   top:25rpx;
   z-index: 1;
 }
.cell__caption{
    color: #322e47;
    font-size: 26rpx;
    min-width: 120rpx;
    text-align: left;
}
.cell--input{
    height: 95rpx;
    display: flex;
    justify-content:flex-start;
    align-items: center;
    padding: 0 50rpx 0 37rpx;
    border-bottom:1rpx solid #dde0e0;
}
.cell--input input{
    width: 580rpx;
    height: 60rpx;
    background-color: #fff;
    padding:0 25rpx;
    border:2rpx solid #dde0e0;
    border-radius: 10rpx;
    font-size: 26rpx;
    box-sizing: border-box;
}
.cell--val{
    font-size: 26rpx;
    color: #444444;
}

