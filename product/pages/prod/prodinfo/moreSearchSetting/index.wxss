page{
  height: 100%;
}
.box{
  background-color:#f1f2f3;
  min-height: 100%;
}
.head{
  height: 85rpx;
  display: flex;
  align-items: center;
  padding-left: 17rpx;
  border-top: 3rpx solid #008e40;
  border-bottom: 3rpx solid #008e40;
}
.head__icon{
  width: 30rpx;
  height: 20rpx;
}
.head__text{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #5f5f5f;
}
.item{
  width: 100%;
  background: #FFF;
  box-sizing: border-box;
  border-top:1rpx solid  #dde0e0;
  border-bottom:1rpx solid  #dde0e0;
  display: flex;
  flex-direction: column;
}
.item:nth-child(odd){
  background-color: #f9f9f9;
}
.item__type{
  color: #008e40;
  font-size: 30rpx;
  line-height: 75rpx;
  border-bottom:3rpx dashed  #dde0e0;
  padding-left: 60rpx;
  position: relative;
}
.item__type:after{
  content: "";
  display: block;
  width: 20rpx;
  height: 20rpx;
  border:3rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(135deg);
  position: absolute;
  right: 30rpx;
  top:25rpx;
  z-index: 1;
}
.item__type--active:after{
  top:30rpx;
  transform: rotate(-45deg);
}
.list__title-text{
  display: block;
}
.list__icon--title{
  margin: 10rpx auto;
  display: block;
  width: 60rpx;
  height: 50rpx;
}
.list__content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 17rpx;
}
.list__content-item{
  width: 130rpx;
  line-height: 56rpx;
  background-color: #f0f2f5;
  text-align: center;
  color: #636363;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-top:17rpx;
  margin-left:16rpx;

}
.list__content-item--active{
  background-color: #008e40;
  color: #fff;
}
.button__warp{
  display: flex;
  padding: 40rpx 40rpx;
}
.button__warp button{
  flex: 1;
  margin:0 15rpx;
}

